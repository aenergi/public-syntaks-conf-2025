# .env.example

# Add path to the src directory
PYTHONPATH=C:\path\to\src

# Azure OpenAI configuration
AZURE_OPENAI_ENDPOINT="https://your-azure-openai-endpoint.openai.azure.com/"
AZURE_OPENAI_API_VERSION="2024-08-01-preview"

# Content safety endpoint Azure Cognitive Services
AZURE_COGNITIVE_SERVICES="https://cognitiveservices.azure.com/.default"

# Optional: Azure Key Vault configuration
AZURE_KEYVAULT_URL="https://your-keyvault-name.vault.azure.net/"

# Optional: API key for Azure OpenAI (if not using DefaultAzureCredential)
AZURE_OPENAI_API_KEY="your-azure-openai-api-key"

# Optional: Use default Azure credentials
USE_DEFAULT_CREDENTIAL=true

